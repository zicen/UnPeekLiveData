<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/btnLiveScroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="goLiveScroll"
        android:text="直播间上下滑场景的数据倒灌演示"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="0dp"
        android:id="@+id/tvDescribe"
        android:layout_height="wrap_content"
        android:text="什么是数据倒灌： “页面在 ‘二进宫’ 时收到旧数据推送” 举个例子：主要发生在通过 SharedViewModel + LiveData 的组合 来解决页面通信的场景。"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnLiveScroll" />
</androidx.constraintlayout.widget.ConstraintLayout>
